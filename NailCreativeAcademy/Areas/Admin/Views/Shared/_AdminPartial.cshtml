@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string namesOfUser = string.Empty;

    if (SignInManager.IsSignedIn(User))
    {
        namesOfUser = User.FindFirstValue(NailCreativeAcademy.Infrastructure.Constants.ClaimConstants.UserFullNameClaim) ?? string.Empty;
    }
}

<ul class="navbar-nav">  
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей @namesOfUser!</a>
    </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" title="Back">Back to public page!</a>
     </li>
   
    }
else
{
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
</ul>
