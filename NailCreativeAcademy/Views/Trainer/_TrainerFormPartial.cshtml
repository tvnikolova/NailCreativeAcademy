@model TrainerFormModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" amethod="post">

            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label">Име и фамилия</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.About" class="control-label">Информация за обучителя</label>
                <input asp-for="@Model.About" class="form-control" />
                <span asp-validation-for="@Model.About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>